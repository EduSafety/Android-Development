<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="22dp">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_background"
        android:padding="5dp"
        android:src="@drawable/baseline_keyboard_arrow_left_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/urbanist_bold"
        android:text="OTP Verification"
        android:textColor="@color/dark"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backButton" />

    <TextView
        android:id="@+id/subHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/urbanist_medium"
        android:text="Enter the verification code we just sent on your email."
        android:textColor="@color/dark_gray"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerTitle" />

    <LinearLayout
        android:id="@+id/containerOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subHeader">


        <EditText
            android:id="@+id/otp1"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_input"
            android:fontFamily="@font/urbanist_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subHeader" />

        <EditText
            android:id="@+id/otp2"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginStart="17dp"
            android:background="@drawable/rounded_input"
            android:fontFamily="@font/urbanist_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@id/otp1"
            app:layout_constraintTop_toBottomOf="@id/subHeader" />

        <EditText
            android:id="@+id/otp3"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginStart="17dp"
            android:background="@drawable/rounded_input"
            android:fontFamily="@font/urbanist_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@id/otp2"
            app:layout_constraintTop_toBottomOf="@id/subHeader" />

        <EditText
            android:id="@+id/otp4"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginStart="17dp"
            android:background="@drawable/rounded_input"
            android:fontFamily="@font/urbanist_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@id/otp3"
            app:layout_constraintTop_toBottomOf="@id/subHeader" />
    </LinearLayout>


    <Button
        android:id="@+id/verifyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:height="56dp"
        android:background="@drawable/rectangle_background"
        android:enabled="false"
        android:fontFamily="@font/urbanist_semibold"
        android:text="Verify"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/containerOtp" />

    <TextView
        android:id="@+id/countdownTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="30s"
        android:textColor="@color/primary"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verifyBtn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/dontHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_medium"
            android:text="Didnâ€™t received code?"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/resendOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:focusable="true"
            android:fontFamily="@font/urbanist_bold"
            android:text="Resend"
            android:textColor="@color/primary"
            android:textSize="15dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>